{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types/"],
    "strict": true,
    "emitDecoratorMetadata": true,   // 开启修饰器
    "experimentalDecorators": true,  // 开启修饰器
    "noImplicitAny": true
  },
  "include": [
    "config/**/*",
    "db/**/*",
    "models/**/*",
    "route/**/*",
    "services/**/*",
    "start/**/*",
    "tool/**/*",
    "app.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
